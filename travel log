travel_log = [
{
  "country": "France",
  "visits": 12,
  "cities": ["Paris", "Lille", "Dijon"]
},
{
  "country": "Germany",
  "visits": 5,
  "cities": ["Berlin", "Hamburg", "Stuttgart"]
},
]



def add_new_country(country_visited, times_visited, cities_visited): #positional argument, important to define the variables going into the function so that they may be modified
  new_country = {} #empty list to add values to
  new_country["country"] = country_visited #to add the first item in dictionary and take first position argument in below function
  new_country["visits"] = times_visited #to add the second item in dictionary and take second position argument in below function
  new_country["cities"] = cities_visited #to add the third item in dictionary and take third position argument in below function
  travel_log.append(new_country) #because we are working with dictionaries within lists, we need to use the .append() to add the new dictionary to the list 





add_new_country("Russia", 2, ["Moscow", "Saint Petersburg"])
print(travel_log)
